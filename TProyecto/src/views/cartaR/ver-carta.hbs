<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Cartas R</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body class="bg-gray-100">

<!-- Botón de retroceso -->
<div class="mb-4">
    <button onclick="window.history.back()" class="text-gray-500 hover:text-gray-700">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    <span class="ml-2">Regresar</span>
    </button>
</div>

<div class="max-w-7xl mx-auto sm:px-6 lg:px-8 mt-12">
    <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg p-4">
        <!-- Formulario de búsqueda -->
        <form method="POST" action="/verCartaR" class="mb-6">
            <div class="flex items-center">
                <input
                    type="text"
                    name="searchTerm"
                    placeholder="Buscar por resumen..."
                    class="border border-gray-300 rounded px-4 py-2 w-full"
                />
                <button
                    type="submit"
                    class="ml-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                >
                    Buscar
                </button>
            </div>
        </form>

        <!-- Tabla de Cartas R -->
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-300">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="px-4 py-2 text-left text-gray-700 font-semibold">ID Carta</th>
                        <th class="px-4 py-2 text-left text-gray-700 font-semibold">Resumen</th>
                        <th class="px-4 py-2 text-left text-gray-700 font-semibold">Fecha de Creación</th>
                        <th class="px-4 py-2 text-left text-gray-700 font-semibold">Producto</th>
                        <th class="px-4 py-2 text-left text-gray-700 font-semibold">Sistema</th>
                        <th class="px-4 py-2 text-left text-gray-700 font-semibold">Agencia</th>
                        <th class="px-4 py-2 text-left text-gray-700 font-semibold">Usuario</th>
                        <th class="px-4 py-2 text-left text-gray-700 font-semibold">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cartas}}
                    <tr class="border-b">
                        <td class="px-4 py-2 text-gray-700">{{ID_Carta_R}}</td>
                        <td class="px-4 py-2 text-gray-700">{{Resumen}}</td>
                        <td class="px-4 py-2 text-gray-700">{{FechaU}}</td>
                        <!-- Mostrar el nombre del producto en lugar de Fk_Producto -->
                        <td class="px-4 py-2 text-gray-700">{{Nom_Producto}}</td>
                        <!-- Mostrar el nombre del sistema en lugar de Fk_Sistema -->
                        <td class="px-4 py-2 text-gray-700">{{Nom_Software}}</td>
                        <!-- Mostrar el nombre de la agencia en lugar de Fk_Agencia -->
                        <td class="px-4 py-2 text-gray-700">{{Nom_Agencia}}</td>
                        <!-- Mostrar el nombre del usuario en lugar de Fk_Usuario -->
                        <td class="px-4 py-2 text-gray-700">{{Nombre_U}}</td>

                        <td class="px-4 py-2 flex gap-2">
                            <!-- Botón de Descarga -->
                            <a href="/imprimirCartaPDF/{{ID_Carta_R}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded">
                                <i class="fas fa-download"></i>
                            </a>
                            <!-- Botón de Editar -->
                            <a href="/editarCarta/{{ID_Carta_R}}" class="bg-green-500 hover:bg-green-700 text-white px-3 py-1 rounded-sm">
                                <i class="fas fa-pen"></i>
                            </a>
                            <!-- Botón de Eliminar -->
                            <form action="/eliminarCarta" method="POST" style="display: inline;">
                                <input type="hidden" name="id_Carta" value="{{ID_Carta_R}}">
                                <button type="submit" class="bg-red-500 hover:bg-red-700 text-white px-3 py-1 rounded-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>
