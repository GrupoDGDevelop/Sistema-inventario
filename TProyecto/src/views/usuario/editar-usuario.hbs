<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">
<h1 class="text-center text-3xl font-bold">Editar Usuario</h1>

<!-- Formulario para editar usuario -->
<form action="/usuario/editar/{{usuario.ID_Usuario}}" method="POST" class="mt-4">
    
    <!-- Campo para Nombre -->
    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
    p-2 my-2 focus:bg-white" placeholder="Nombre del Usuario" name="Nombre_U" value="{{usuario.Nombre_U}}" required>
    
    <!-- Campo para Correo -->
    <input type="email" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
    p-2 my-2 focus:bg-white" placeholder="Correo Electrónico" name="Correo_U" value="{{usuario.Correo_U}}" required>
    
    <!-- Campo para Contraseña (opcional) -->
    <input type="password" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
    p-2 my-2 focus:bg-white" placeholder="Nueva Contraseña (opcional)" name="password">

    <!-- Combo Box para Rol -->
    <select class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
    p-2 my-2 focus:bg-white" name="Fk_Rol" required>
    <option value="" disabled>Seleccionar Rol</option>
    {{#each roles}}
        <option value="{{this.ID_Rol}}" {{#ifCond this.ID_Rol usuario.Fk_Rol}}selected{{/ifCond}}>{{this.Nom_Rol}}</option>
    {{/each}}
    </select>

    <!-- Botón de enviar -->
    <button type="submit" class="rounded-md bg-gray-500 w-full text-lg text-white font-semibold p-2 my-3
    hover:bg-gray-500 focus:bg-green-700">Guardar</button>

</form>
</div>
