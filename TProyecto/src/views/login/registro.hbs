<div class="flex items-center justify-center h-screen bg-gradient-to-b from-blue-800 to-blue-500">
  <div class="relative bg-gray-100 p-8 rounded-2xl shadow-xl w-96">

    <a href="/login" class="absolute top-0 left-0 text-black hover:text-gray-300 p-4">
      <i class="fas fa-arrow-left text-2xl"></i>
    </a>

    <h2 class="text-center text-3xl font-bold mb-6 text-gray-800">Registro</h2>
    
    <form action="" method="POST" class="space-y-4">
      <div class="relative">
        <input type="text" name="Nombre_U" placeholder="Nombre" 
          class="w-full p-3 bg-gray-300 text-gray-800 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
      </div>
      
      <div class="relative">
        <input type="email" name="Correo_U" placeholder="Email" 
          class="w-full p-3 bg-gray-300 text-gray-800 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
      </div>

      <div class="relative">
        <input type="password" name="password" placeholder="Password" 
          class="w-full p-3 bg-gray-300 text-gray-800 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
      </div>
      
      <button type="submit" 
        class="w-full py-3 bg-gray-800 text-white rounded-md hover:bg-gray-700 transition duration-300">
        Enviar
      </button>
      {{#if error}}
      <p class="text-red-500 font-bold text-lg my-3">* {{error}}</p>
      {{/if}}
    </form>
  </div>
</div>
